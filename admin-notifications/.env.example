# Copy to admin-notifications/.env and fill with your Firebase Web app config.
# Optional: because vite.config.ts uses envDir="..", you can also place these in the repo root .env.

VITE_FIREBASE_API_KEY=your-firebase-web-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_APP_ID=1:1234567890:web:abcdef1234567890

# Optional but recommended
VITE_FIREBASE_MESSAGING_SENDER_ID=1234567890
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_FUNCTIONS_REGION=europe-west1

# Legacy fallback supported for apiKey only (repo root env compatibility):
# FIREBASE_WEB_API_KEY=your-firebase-web-api-key
