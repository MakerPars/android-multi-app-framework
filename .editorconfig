root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.kt]
indent_size = 4
max_line_length = 100

[*.kts]
indent_size = 4
continuation_indent_size = 8
max_line_length = 120

[*.xml]
indent_size = 4

[*.gradle]
indent_size = 4

[*.json]
indent_size = 2

[*.yaml]
indent_size = 2
